<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_on_primary"
    android:padding="@dimen/padding"
    tools:context=".uiwidgets.ConstraintLayoutActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/new_application"
        android:textColor="@color/white_text_color"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/back"
        android:textColor="@color/white_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/create_an_application_for_the_hosts_indicating_all_the_neccessary_living_conditions"
        android:textColor="@color/white_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/destination"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutDestination"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        app:endIconMode="clear_text"
        app:endIconTint="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewDestination"
        app:layout_constraintStart_toStartOf="@id/textViewDestination"
        app:layout_constraintTop_toBottomOf="@id/textViewDestination">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:text="@string/omang"
            android:textColor="@color/white_text_color" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/date"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toStartOf="@id/textViewNights"
        app:layout_constraintStart_toStartOf="@id/textInputLayoutDestination"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutDestination" />

    <TextView
        android:id="@+id/textViewNights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/nights"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDate"
        app:layout_constraintTop_toTopOf="@id/textViewDate" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        android:background="@drawable/bg_edit_text"
        android:text="@string/apr_18_2023"
        android:textColor="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewDate"
        app:layout_constraintStart_toStartOf="@id/textViewDate"
        app:layout_constraintTop_toBottomOf="@id/textViewDate" />

    <EditText
        android:id="@+id/editTextNights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        android:background="@drawable/bg_edit_text"
        android:text="@string/_08"
        android:textColor="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewNights"
        app:layout_constraintStart_toStartOf="@id/textViewNights"
        app:layout_constraintTop_toBottomOf="@id/textViewNights" />

    <TextView
        android:id="@+id/textViewGuests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/guests"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toStartOf="@id/textViewBedrooms"
        app:layout_constraintStart_toStartOf="@id/editTextDate"
        app:layout_constraintTop_toBottomOf="@id/editTextDate" />

    <TextView
        android:id="@+id/textViewBedrooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/bedrooms"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toEndOf="@id/editTextNights"
        app:layout_constraintStart_toEndOf="@id/textViewGuests"
        app:layout_constraintTop_toTopOf="@id/textViewGuests" />

    <EditText
        android:id="@+id/editTextGuests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        android:background="@drawable/bg_edit_text"
        android:text="@string/_02"
        android:textColor="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewGuests"
        app:layout_constraintStart_toStartOf="@id/textViewGuests"
        app:layout_constraintTop_toBottomOf="@id/textViewGuests" />

    <EditText
        android:id="@+id/editTextBedrooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        android:background="@drawable/bg_edit_text"
        android:text="@string/_03"
        android:textColor="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewBedrooms"
        app:layout_constraintStart_toStartOf="@id/textViewBedrooms"
        app:layout_constraintTop_toBottomOf="@id/textViewBedrooms" />

    <TextView
        android:id="@+id/textViewSelectType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_text_view_margin_top"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/select_type"
        android:textColor="@color/dark_gray_hint"
        app:layout_constraintEnd_toEndOf="@id/editTextBedrooms"
        app:layout_constraintStart_toStartOf="@id/editTextGuests"
        app:layout_constraintTop_toBottomOf="@id/editTextGuests" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayouttSelectType"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hotel_booking_edit_text_margin_top"
        app:endIconTint="@color/white_text_color"
        app:layout_constraintEnd_toEndOf="@id/textViewSelectType"
        app:layout_constraintStart_toStartOf="@id/textViewSelectType"
        app:layout_constraintTop_toBottomOf="@id/textViewSelectType">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:fontFamily="@font/montserrat"
            android:inputType="none"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/any_type"
            android:textColor="@color/white_text_color" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreateApplication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_cyan"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/create_application"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/textInputLayouttSelectType"
        app:layout_constraintStart_toStartOf="@id/textInputLayouttSelectType" />

</androidx.constraintlayout.widget.ConstraintLayout>