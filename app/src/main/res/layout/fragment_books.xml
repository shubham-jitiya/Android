<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    android:background="#E0F2F1"
    tools:context=".activity_fragment_intent.fragments.BooksFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextBookFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSendToChatFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_to_chat_fragment"
        app:layout_constraintEnd_toEndOf="@id/editTextBookFragment"
        app:layout_constraintStart_toStartOf="@id/editTextBookFragment"
        app:layout_constraintTop_toBottomOf="@id/editTextBookFragment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBooksFragmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/books_fragment"
        app:layout_constraintTop_toBottomOf="@id/buttonSendToChatFragment" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBooksFragmentData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data"
        app:layout_constraintTop_toBottomOf="@id/textViewBooksFragmentTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>