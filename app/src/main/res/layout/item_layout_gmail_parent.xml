<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayoutGmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewUserProfile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder_gmail"
        app:layout_constraintEnd_toStartOf="@id/textViewSenderName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSenderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/body"
        app:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toStartOf="@id/textViewTimeStamp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/imageViewUserProfile"
        app:layout_constraintTop_toTopOf="@id/imageViewUserProfile"
        tools:text="Shubham" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonImportant"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/selector_mark_important"
        android:src="@drawable/ic_star_unselected"
        app:layout_constraintEnd_toEndOf="@id/textViewTimeStamp"
        app:layout_constraintTop_toTopOf="@id/textViewMessage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/body"
        app:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toEndOf="@id/textViewSenderName"
        app:layout_constraintStart_toStartOf="@id/textViewSenderName"
        app:layout_constraintTop_toBottomOf="@id/textViewSenderName"
        tools:text="@string/mail_subject" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/body"
        app:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="@id/textViewSubject"
        app:layout_constraintStart_toStartOf="@id/textViewSubject"
        app:layout_constraintTop_toBottomOf="@id/textViewSubject"
        tools:text="@string/mail_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attachment"
        app:layout_constraintEnd_toStartOf="@id/textViewTimeStamp"
        app:layout_constraintStart_toEndOf="@id/textViewSubject"
        app:layout_constraintTop_toTopOf="@id/textViewSenderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTimeStamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/textViewSenderName"
        app:layout_constraintTop_toTopOf="@id/textViewSenderName"
        tools:text="21:30 am" />

</androidx.constraintlayout.widget.ConstraintLayout>