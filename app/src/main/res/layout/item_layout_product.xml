<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_circular_light_purple"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/product_headphone" />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/red_onion"
        android:textColor="@color/card_text_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewProductCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/headphones"
        android:textColor="@color/card_text_subtitle"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/_124"
        android:textColor="@color/card_text_subtitle"
        android:textSize="18sp" />
</LinearLayout>