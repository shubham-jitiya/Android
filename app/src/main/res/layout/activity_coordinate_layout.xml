<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_light_red"
    tools:context=".uiwidgets.CoordinateLayoutActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/card_light_purple" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCoordinatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#F44336"
        android:contentDescription="@string/see_list_of_items"
        android:src="@drawable/ic_food"
        app:layout_anchorGravity="end|bottom"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>